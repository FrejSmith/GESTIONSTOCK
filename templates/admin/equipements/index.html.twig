{% extends 'base.html.twig' %}

{% block title %}Liste des équipements{% endblock %}

{% block body %}
    <h1>Liste des équipements</h1>
    <a href="{{ path('admin_equipements_ajouter') }}" class="btn btn-success">Ajouter un équipement</a>
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Nom</th>
                <th>Catégorie</th>
                <th>Prix</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for equipement in equipements %}
                <tr>
                    <td>{{ equipement.id }}</td>
                    <td>{{ equipement.name }}</td>
                    <td>{{ equipement.categorie ? equipement.categorie.nom : '' }}</td>
                    <td>{{ equipement.price }}</td>
                    <td>
                        <a href="{{ path('equipement_modifier', {id: equipement.id}) }}">Modifier</a>
                        <form method="post" action="{{ path('admin_equipements_supprimer', { id: equipement.id }) }}" style="display:inline-block;" onsubmit="return confirm('Êtes-vous sûr ?');">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ equipement.id) }}">
                            <button class="btn btn-danger btn-sm">Supprimer</button>
                        </form>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}