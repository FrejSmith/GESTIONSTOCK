{% extends 'base.html.twig' %}

{% block title %}Liste des équipements{% endblock %}

{% block body %}
    <h1>Liste des équipements</h1>
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Nom</th>
                <th>Quantité</th>
                <th>Prix</th>
            </tr>
        </thead>
        <tbody>
            {% for equipement in equipements %}
                <tr>
                    <td>{{ equipement.id }}</td>
                    <td>{{ equipement.name }}</td>
                    <td>{{ equipement.quantity }}</td>
                    <td>{{ equipement.price }}</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">Aucun équipement trouvé.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
