{% extends 'base.html.twig' %}

{% block title %}Paiement - Souscription{% endblock %}

{% block body %}
<section id="paiement-section" style="background:#f8fafc; padding:60px 0;">
  <div style="max-width:500px; margin:0 auto; padding:0 20px;">
    <h2 style="font-size:2rem; font-weight:bold; color:#1a2236; text-align:center; margin-bottom:32px;">
      Paiement - Offre {{ offre|capitalize }}
    </h2>
    <form method="post" action="#">
      <div style="margin-bottom:16px;">
        <input type="text" name="nom" placeholder="Nom sur la carte" required style="width:100%;padding:10px;border-radius:6px;border:1px solid #e0e0e0;">
      </div>
      <div style="margin-bottom:16px;">
        <input type="text" name="numero" placeholder="NumÃ©ro de carte" required maxlength="19" style="width:100%;padding:10px;border-radius:6px;border:1px solid #e0e0e0;">
      </div>
      <div style="display:flex; gap:10px; margin-bottom:16px;">
        <input type="text" name="expiration" placeholder="MM/AA" required maxlength="5" style="flex:1;padding:10px;border-radius:6px;border:1px solid #e0e0e0;">
        <input type="text" name="cvc" placeholder="CVC" required maxlength="4" style="flex:1;padding:10px;border-radius:6px;border:1px solid #e0e0e0;">
      </div>
      <div style="margin-bottom:16px; text-align:center;">
        <span style="font-size:1.1rem; color:#888;">ou</span>
      </div>
      <div style="margin-bottom:24px; text-align:center;">
        <a href="{{ path('paypal_paiement', {'offre': offre}) }}" style="background:#0070ba;color:#fff;border:none;border-radius:8px;padding:10px 28px;font-size:1rem;font-weight:500;cursor:pointer;text-decoration:none;display:inline-block;">
          <i class="fab fa-paypal"></i> Payer avec PayPal
        </a>
      </div>
      <button type="submit" style="background:#377dff;color:#fff;border:none;border-radius:8px;padding:10px 28px;font-size:1rem;font-weight:500;cursor:pointer;">Payer</button>
    </form>
  </div>
</section>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
{% endblock %}