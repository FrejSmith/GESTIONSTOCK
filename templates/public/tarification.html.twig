{% extends 'base.html.twig' %}

{% block title %}Tarification{% endblock %}

{% block body %}
<!-- Section Tarification -->
<section id="tarification" style="background:#f8fafc; padding:60px 0;">
  <div style="max-width:1100px; margin:0 auto; padding:0 20px;">
    <h2 style="font-size:2.1rem; font-weight:bold; color:#1a2236; text-align:center; margin-bottom:38px;">
      Tarification
    </h2>
    <div style="display:flex; flex-wrap:wrap; gap:32px; justify-content:center;">
      <!-- Offre Gratuit -->
      <div style="background:#fff; border-radius:16px; box-shadow:0 2px 10px 0 rgba(30,40,60,0.07); width:320px; padding:36px 28px 32px 28px; text-align:center; display:flex; flex-direction:column; align-items:center;">
        <div style="font-size:1.2rem; font-weight:600; color:#377dff; margin-bottom:10px;">Gratuit</div>
        <div style="font-size:2.3rem; font-weight:bold; color:#151d2a; margin-bottom:12px;">0€<span style="font-size:1.1rem; color:#556080;">/mois</span></div>
        <ul style="list-style:none; padding:0; margin:0 0 24px 0; text-align:left;">
          <li style="margin-bottom:10px;"><i class="fas fa-check-circle" style="color:#44c97f; margin-right:7px;"></i>Jusqu'à 50 produits</li>
          <li style="margin-bottom:10px;"><i class="fas fa-check-circle" style="color:#44c97f; margin-right:7px;"></i>1 utilisateur</li>
          <li style="margin-bottom:10px;"><i class="fas fa-check-circle" style="color:#44c97f; margin-right:7px;"></i>Tableau de bord</li>
        </ul>
        <button onclick="window.location.href='{{ path('paiement', {'offre': 'gratuit'}) }}'" style="background:#377dff; color:#fff; border:none; border-radius:8px; padding:10px 28px; font-size:1rem; font-weight:500; cursor:pointer;">Commencer</button>
      </div>
      <!-- Offre Pro -->
      <div style="background:#fff; border-radius:16px; box-shadow:0 4px 18px 0 rgba(30,40,60,0.10); width:340px; padding:44px 28px 40px 28px; text-align:center; display:flex; flex-direction:column; align-items:center; border:2px solid #377dff;">
        <div style="font-size:1.2rem; font-weight:600; color:#377dff; margin-bottom:10px;">Pro</div>
        <div style="font-size:2.3rem; font-weight:bold; color:#151d2a; margin-bottom:12px;">19€<span style="font-size:1.1rem; color:#556080;">/mois</span></div>
        <ul style="list-style:none; padding:0; margin:0 0 24px 0; text-align:left;">
          <li style="margin-bottom:10px;"><i class="fas fa-check-circle" style="color:#44c97f; margin-right:7px;"></i>Produits illimités</li>
          <li style="margin-bottom:10px;"><i class="fas fa-check-circle" style="color:#44c97f; margin-right:7px;"></i>Jusqu'à 5 utilisateurs</li>
          <li style="margin-bottom:10px;"><i class="fas fa-check-circle" style="color:#44c97f; margin-right:7px;"></i>Rapports avancés</li>
          <li style="margin-bottom:10px;"><i class="fas fa-check-circle" style="color:#44c97f; margin-right:7px;"></i>Support prioritaire</li>
        </ul>
        <button onclick="window.location.href='{{ path('paiement', {'offre': 'pro'}) }}'" style="background:#377dff; color:#fff; border:none; border-radius:8px; padding:10px 28px; font-size:1rem; font-weight:500; cursor:pointer;">Essayer Pro</button>
      </div>
      <!-- Offre Entreprise -->
      <div style="background:#fff; border-radius:16px; box-shadow:0 2px 10px 0 rgba(30,40,60,0.07); width:320px; padding:36px 28px 32px 28px; text-align:center; display:flex; flex-direction:column; align-items:center;">
        <div style="font-size:1.2rem; font-weight:600; color:#377dff; margin-bottom:10px;">Entreprise</div>
        <div style="font-size:2.3rem; font-weight:bold; color:#151d2a; margin-bottom:12px;">Sur devis</div>
        <ul style="list-style:none; padding:0; margin:0 0 24px 0; text-align:left;">
          <li style="margin-bottom:10px;"><i class="fas fa-check-circle" style="color:#44c97f; margin-right:7px;"></i>Fonctionnalités sur mesure</li>
          <li style="margin-bottom:10px;"><i class="fas fa-check-circle" style="color:#44c97f; margin-right:7px;"></i>Utilisateurs illimités</li>
          <li style="margin-bottom:10px;"><i class="fas fa-check-circle" style="color:#44c97f; margin-right:7px;"></i>Intégrations avancées</li>
          <li style="margin-bottom:10px;"><i class="fas fa-check-circle" style="color:#44c97f; margin-right:7px;"></i>Support dédié</li>
        </ul>
        <a href="{{ path('contact') }}" style="background:#151d2a; color:#fff; border:none; border-radius:8px; padding:10px 28px; font-size:1rem; font-weight:500; cursor:pointer; text-decoration:none; display:inline-block;">Contactez-nous</a>
      </div>
    </div>
  </div>
</section>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
{% endblock %}